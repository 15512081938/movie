@import '/public/style/css.wxss';
.nav {
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-size: 15px;
    font-weight: 700;
}

.now {
    color: red;
    padding: 20rpx 20rpx 20rpx 20rpx;
    border-bottom: 4rpx solid red;
}

.swiper {
    height: 1200rpx;
}

.swiperitem {
    height: 100%;
}

.movie {
    height: 1200rpx;
}

.hide {
    position: fixed;
    bottom: 80rpx;
    right: 20rpx;
    z-index: 99999;
    opacity: 0;
    transition: all .6s;
}

.show {
    position: fixed;
    bottom: 80rpx;
    right: 20rpx;
    z-index: 99999;
    opacity: 1;
    transition: all .6s;
}

image {
    width: 128rpx;
    height: 180rpx;
}

.img {
    padding: 20rpx 0 0 10rpx;
}

.btn {
    position: relative;
    height: 228rpx;
    width: 730rpx;
    margin: 0 auto;
    display: flex;
}

.title {
    font-size: 17px;
    color: #333;
    font-weight: 700;
    padding-right: 10rpx;
    flex-shrink: 1;
}

.grade {
    font-weight: 700;
    color: #faaf00;
    font-size: 15px;
}

.fontcolor {
    margin-left: 20rpx;
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    font-size: 13px;
    color: #666;
    height: 180rpx;
}

.fontcolor view {
    line-height: 23px;
}

.row {
    display: flex;
}